		{
			"name": "Get post by id",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"let randomId = Math.floor(Math.random() * 100) + 1; // Generate a random ID between 1 and 100\r",
							"pm.environment.set(\"randomId\", randomId); // Set the random ID as an environment variable"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Response post id should be randomId\", function () {\r",
							"    var randomId = pm.environment.get(\"randomId\"); // Assuming randomId is stored in environment variables\r",
							"    pm.expect(pm.response.json().id).to.eql(randomId);   \r",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "https://jsonplaceholder.typicode.com/posts/{{randomId}}",
					"protocol": "https",
					"host": [
						"jsonplaceholder",
						"typicode",
						"com"
					],
					"path": [
						"posts",
						"{{randomId}}"
					]
				}
			},
			"response": []
